<!DOCTYPE html>
<html lang="en">
    <head>
        {{>data}}
        {{>links}}
    </head>
    <body>
        {{>header}}
        <div id="flexContainer">
            <div id="form">
                <form>
                    <input type="text" placeholder="City name...">
                    <input type="submit" value="submit">
                </form>
                <div>
                    <img id="weatherImg" src="../img/question_mark.png" alt="Dynamic weather icon">
                </div>
            </div>
            <div id="text">
                <table>
                    <col style="width: 30%;">
                    <col style="width: 70%;">
                    <tr>
                        <td>City</td>
                        <td id="city"></td>
                    </tr>
                    <tr>
                        <td>Description</td>
                        <td id="description"></td>
                    </tr>
                    <tr>
                        <td>Temperature</td>
                        <td id="temperature"></td>
                    </tr>
                    <tr>
                        <td>Time</td>
                        <td id="time"></td>
                    </tr>
                </table>
            </div>
        </div>
        {{>footer}}
    </body>
    <script src="../js/weather.js"></script>
</html>